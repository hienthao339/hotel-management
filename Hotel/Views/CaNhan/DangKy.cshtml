@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared2/_Layout.cshtml";
}
@model Hotel.Models.ViewModels.dangkyView
@using (Html.BeginForm())
{
    <main class="d-flex flex-row">
        @Html.AntiForgeryToken()
        <img class="img-fluid col-6" src="~/Assets/Client/hotel-bg-4.jpg" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-6 fs-5 fw-bold" style="padding:4em 7em">
            <div class="row my-3">
                <span class="mb-2">Tên đăng nhập</span>
                @*<input id="signup-name" type="text" required placeholder="Nhập tên đăng nhập"
                    style="padding:1rem" />*@
                @Html.EditorFor(model => model.tendn, new { htmlAttributes = new { @id = "login-name", @type = "text", @style = "padding:1rem", @placeholder = "Nhập tên đăng nhập", @Required = "Nhập tài khoản" } })
                @Html.ValidationMessageFor(model => model.tendn, "", new { @class = "text-danger" })
            </div>
            <div class="row mb-3">
                <span class="mb-2">Mật khẩu</span>
                @Html.EditorFor(model => model.matkhau, new { htmlAttributes = new { @id = "login-name", @type = "password", @style = "padding:1rem", @placeholder = "Nhập mật khẩu", @Required = "Nhập mật khẩu" } })
                @Html.ValidationMessageFor(model => model.matkhau, "", new { @class = "text-danger" })
            </div>

            <div class="row mb-3">
                <span class="mb-2">Nhập lại mật khẩu</span>
                @Html.EditorFor(model => model.xacnhanmatkhau, new { htmlAttributes = new { @id = "login-name", @type = "password", @style = "padding:1rem", @placeholder = "Nhập lại mật khẩu", @Required = "Nhập mật khẩu" } })
                @Html.ValidationMessageFor(model => model.xacnhanmatkhau, "", new { @class = "text-danger" })
            </div>

            <div class="row mb-3">
                <span class="mb-2">Tên người dùng</span>
                @Html.EditorFor(model => model.hoten, new { htmlAttributes = new { @id = "login-name", @type = "text", @style = "padding:1rem", @placeholder = "Nhập tên người dùng", @Required = "Nhập mật khẩu" } })
                @Html.ValidationMessageFor(model => model.hoten, "", new { @class = "text-danger" })
            </div>

            <div class="row mb-3">
                <span class="mb-2">Số điện thoại</span>
                @Html.EditorFor(model => model.sdt, new { htmlAttributes = new { @id = "login-name", @type = "text", @style = "padding:1rem", @placeholder = "Nhập số điện thoại người dùng", @Required = "Nhập mật khẩu" } })
                @Html.ValidationMessageFor(model => model.sdt, "", new { @class = "text-danger" })
            </div>

            <div class="row mb-3">
                <span class="mb-2">Email</span>
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @id = "login-name", @type = "text", @style = "padding:1rem", @placeholder = "Nhập email người dùng", @Required = "Nhập mật khẩu" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>


            @Html.EditorFor(model => model.ID_LND, new { htmlAttributes = new { @style = "display: none", @Value = "1" } })
            @*<div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="privacy-policy" />
                    <label class="form-check-label fw-light" for="privacy-policy">Tôi đồng ý với điều khoản sử dụng</label>
                </div>*@
            <div class="row mt-4">
                <button class="py-3 w-100 btn-dark border-0 fw-bold">Đăng ký</button>
            </div>
            <div class="row text-center my-5">
                <span class="mb-3 fw-normal">Bạn đã có tài khoản?  @Html.ActionLink("Đăng nhập", "dangnhap", null, new { @style = "text-decoration:none" })</span>


            </div>
        </div>
    </main>

}