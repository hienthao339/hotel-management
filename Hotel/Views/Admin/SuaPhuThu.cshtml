@model Hotel.Models.phuthu

@{
    ViewBag.Title = "SuaPhuThu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div style="margin: 20px">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_PT)

        <div class="form-group mt-2">
            <h5>Tên phụ thu</h5>
            <div class="my-2">
                @Html.EditorFor(model => model.tenpt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenpt, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5>Giá phụ thu</h5>
            <div class="my-2">
                @Html.EditorFor(model => model.giapt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.giapt, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" style="padding: 10px ; width: 100px ; margin-right: 10px" , class="btn btn-danger btn-sm " />
                @Html.ActionLink("Trở về danh sách", "DSPhuThu", null, new { @type = "button", @style = "padding: 10px ; margin-right: 10px", @class = "btn btn-dark btn-sm" })
            </div>
        </div>
    </div>
}