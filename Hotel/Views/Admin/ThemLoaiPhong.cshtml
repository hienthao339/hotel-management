@model Hotel.Models.loaiphong

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div style="margin: 20px">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_LP)

        <div class="form-group mt-2">
            <h5>Tên loại phòng</h5>
            <div class="my-2">
                @Html.EditorFor(model => model.tenlp, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenlp, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5>Giá phòng</h5>
            <div class="my-2">
                @Html.EditorFor(model => model.giaphong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.giaphong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5>Mô tả phòng</h5>
            <div class="my-2">
                @Html.EditorFor(model => model.mota_p, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.mota_p, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm" style="padding: 10px ; width: 100px ; margin-right: 10px" , class="btn btn-danger btn-sm " />
                @Html.ActionLink("Trở về danh sách", "DSDichVu", null, new { @type = "button", @style = "padding: 10px ; margin-right: 10px", @class = "btn btn-dark btn-sm" })
            </div>
        </div>
    </div>
}
