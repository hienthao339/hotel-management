@model Hotel.Models.phong

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Hotel.Models.DBHotelContextEntities dba = new Hotel.Models.DBHotelContextEntities();
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div style="margin: 20px">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_LP)

        <div class="form-group mt-2">
            <h5>Tên loại phòng</h5>
            <div class="my-2">
                <select class="form-control" name="ID_LP">
                    @foreach (var loai in dba.loaiphongs.ToList())
                    {
                        <option value="@loai.ID_LP">@loai.tenlp</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <h5>Tên phòng</h5>
            <div class="my-2">
                @Html.EditorFor(model => model.tenphong, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenphong, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5>Trạng thái</h5>
            <div class="my-2">
                @Html.EditorFor(model => model.trangthai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.trangthai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5>Tầng</h5>
            <div class="my-2">
                @Html.EditorFor(model => model.tang, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5>Hình ảnh</h5>
            <div class="my-2">
                @Html.EditorFor(model => model.avatar_p, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.avatar_p, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" style="padding: 10px ; width: 100px ; margin-right: 10px" , class="btn btn-danger btn-sm " />
                @Html.ActionLink("Trở về danh sách", "DSPhong", null, new { @type = "button", @style = "padding: 10px ; margin-right: 10px", @class = "btn btn-dark btn-sm" })
            </div>
        </div>
    </div>
}