@model Hotel.Models.nguoidung

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Hotel.Models.DBHotelContextEntities db = new Hotel.Models.DBHotelContextEntities();
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div style="margin: 20px">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_ND)

        <div class="form-group mt-2">
            <h5>Tên đăng nhập</h5>
            <div class="my-2">
                @Html.EditorFor(model => model.tendn, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tendn, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-2">
            <h5>Mật khẩu</h5>
            <div class="my-2">
                @Html.EditorFor(model => model.matkhau, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tendn, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-2">
            <h5>Họ tên</h5>
            <div class="my-2">
                @Html.EditorFor(model => model.hoten, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.hoten, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-2">
            <h5>Số điện thoại</h5>
            <div class="my-2">
                @Html.EditorFor(model => model.sdt, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sdt, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-2">
            <h5>Địa chỉ</h5>
            <div class="my-2">
                @Html.EditorFor(model => model.diachi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.diachi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-2">
            <h5>Email</h5>
            <div class="my-2">
                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5>Loại người dùng</h5>
            <div class="my-2">
                <select class="form-control" name="ID_LND">
                    @foreach (var loai in db.loainguoidungs.ToList())
                    {
                        <option value="@loai.ID_LND">@loai.loainguoidung1</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" style="padding: 10px ; width: 100px ; margin-right: 10px" , class="btn btn-danger btn-sm " />
                @Html.ActionLink("Trở về danh sách", "DSTaiKhoan", null, new { @type = "button", @style = "padding: 10px ; margin-right: 10px", @class = "btn btn-dark btn-sm" })
            </div>
        </div>
    </div>
}